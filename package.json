{
  "name": "xpense",
  "version": "0.1.0",
  "description": "a expenses tracking app",
  "author": "sverdejot <sverdejot@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=18.12.0",
    "npm": ">=9.2.0"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:features": "npm run test:expense:backend:features",
    "test:expense:backend:features": "NODE_ENV=test cucumber-js -p expense_service",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "dev:expense": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/expense/backend/start.ts"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "bodybuilder": "^2.5.0",
    "bson": "^5.2.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "copy": "^0.0.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.15.0",
    "glob": "^9.3.4",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "node-dependency-injection": "^2.6.11",
    "nunjucks": "^3.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.1.0",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "^0.0.37",
    "@types/cookie-parser": "^1.4.3",
    "@types/cucumber": "^7.0.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.17",
    "@types/faker": "^6.6.9",
    "@types/glob": "^8.1.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/nunjucks": "^3.2.2",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.38.0",
    "eslint-config-codely": "^2.1.3",
    "faker": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
